
{
  "name": "vsc-essbase-linter",
  "displayName": "vsc-essbase-linter",
  "publisher": "hq",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haoq-repo/vsc-essbase-linter.git"
  },
  "engines": { "vscode": "^1.95.0" },
  "categories": ["Linters"],
  "activationEvents": ["onLanguage:essbase"],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "essbase",
        "aliases": ["Essbase Calc Script"],
        "extensions": [".csc"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "essbase",
        "scopeName": "source.essbase",
        "path": "./syntaxes/essbase.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Essbase Linter",
      "properties": {
        "essbaseLinter.rules": {
          "type": "object",
          "default": {
            "essbase.fix.balance":        { "enabled": true,  "severity": "error" },
            "essbase.if.balance":         { "enabled": true,  "severity": "error" },
            "essbase.fix.nesting":        { "enabled": true, "severity": "warning" },
            "essbase.syntax.rogueComma":  { "enabled": true,  "severity": "error" }
          },
          "description": "Enable/disable linter rules and set their severities.",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "enabled":  { "type": "boolean", "default": true },
              "severity": { "type": "string", "enum": ["error", "warning", "info"], "default": "error" }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -p ./ -w",
    "test": "echo \"(optional) add tests later\""
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "typescript": "^5.0.0",
    "tslint": "^6.1.0"
  }
}
